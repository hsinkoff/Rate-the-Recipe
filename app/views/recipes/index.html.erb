<div class="container-fluid">
<div class="text-center">
  <h1> Recipe of the week page</h1>
  <br/>
  
  <% if @recipes != nil %>   
    <button type="button" class="btn btn-info btn-lg navbar-btn"><%= link_to 'Submit Update', edit_recipe_path(@recipes) %></button>
    <div class="space"/>
    <div class="col-lg-6 col-lg-offset-1">
    <div class="background-box">
      <h3><%= @recipes.name %></h3>
      <br/>
      <h4><%= "Ingredients" %></h4>
      <% @recipes.ingredients.split("\r\n").each do |ingred| %>
        <h5><%= ingred %></h5>
      <%end%>
      <br/>
      <h4><%= "Directions" %></h4>
      <% @recipes.directions.split("\r\n").each do |name|
       %>
        <h5><%= name %></h5>
      <% end%>
    </div>
  <% else %>
    <%= "There is no recipe this week.  Try back next week." %>
  <% end %>
</div>
</div>
<div class="col-lg-4">
  <br/>
  <% if @recipes != Recipe.last %>
    <h1> The next recipe will be posted on:</h1>
    <h2><%=Recipe.where('publish_date > ?', @recipes.publish_date).first.publish_date.strftime("%B %d, %Y.")%></h2>
  <% else %>
    <h1 class = "text-red"> There are no more recipes in our cookbook.  Please add recipes to our cookbook so that we can have a recipe of the week next week.</h1>
  <% end %>
</div>
</div>